@using Microsoft.AspNetCore.Identity
@inject SignInManager<Driver> SignInManager
@inject UserManager<Driver> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BusManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BusManagementSystem.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <ul class="navbar-nav flex-grow-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Bus Management System</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var isManager = bool.Parse(User.FindFirst("IsManager")?.Value ?? "false");
                            if (isManager)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Driver</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Bus</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Entry</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Route</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Loop</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bus" asp-action="Index">Stop</a>
                                </li>
                                
                                
                                
                            }
                        }
                    </ul>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var isManager = bool.Parse(User.FindFirst("IsManager")?.Value ?? "false");
                        <ul class="navbar-nav ml-auto align-items-center">
                            <li class="nav-item">
                                <span class="nav-link">@User.Identity.Name | @(isManager ? "Manager" : "Driver")</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="User" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <a href="https://media.discordapp.net/attachments/1042633236372795408/1077646025914863707/ezgif.com-resize.gif">&copy; 2024 - BSU</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>