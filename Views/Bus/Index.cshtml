@model IEnumerable<BusManagementSystem.Models.Bus>

@{
    ViewData["Title"] = "Buses";
    <link rel="stylesheet" href="~/css/bus_index.css"/>
}

<div>
    <div id="bus-index-header">
        <h1>Buses</h1>
        <div id="buttons">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBusModal">Create Bus</button>
            <button type="submit" class="btn btn-primary" onclick="deleteSelectedBuses()">Delete</button>
        </div>
    </div>
    <hr id="separator">
    <form id="deleteForm" asp-action="Delete" method="post">
        <table id="bus-table" class="table table-striped">
            <thead>
            <tr>
                <th>
                    <input type="checkbox" id="selectAllCheckbox">
                </th>
                <th>Bus Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var bus in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="busCheckbox" data-bus-id="@bus.BusId">
                    </td>
                    <td>@bus.BusNumber</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@bus.BusId">Edit</a> |
                        <button type="submit" class="btn btn-danger" onclick="deleteBus(@bus.BusId)">
                            Delete
                        </button>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </form>
</div>

<!-- Create Bus Modal -->
@await Html.PartialAsync("_CreateBusModal", new BusManagementSystem.Models.Bus())

